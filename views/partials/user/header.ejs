<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Electro - HTML Ecommerce Template</title>

    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">
    <link type="text/css" rel="stylesheet" href="css/bootstrap.min.css" />
    <link type="text/css" rel="stylesheet" href="css/slick.css" />
    <link type="text/css" rel="stylesheet" href="css/slick-theme.css" />
    <link type="text/css" rel="stylesheet" href="css/nouislider.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link type="text/css" rel="stylesheet" href="css/style.css" />

    <style>
        /* Header Styles */
        .header {
            background-color: #1a1a1a;
            padding: 10px 0;
            position: sticky;
            top: 0;
            z-index: 1000;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .header .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 15px;
        }

        .logo a {
            color: #fff;
            font-size: 24px;
            font-weight: bold;
            text-decoration: none;
            text-transform: uppercase;
        }

        .nav-menu ul {
            list-style: none;
            display: flex;
            gap: 20px;
            margin: 0;
            padding: 0;
        }

        .nav-menu ul li a {
            color: #fff;
            text-decoration: none;
            font-size: 16px;
            transition: color 0.3s;
        }

        .nav-menu ul li a:hover {
            color: #00aaff;
        }

        .user-actions {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .cart {
            position: relative;
            transition: transform 0.2s ease-in-out;
        }

        .cart:hover {
            transform: scale(1.1);
        }

        .cart a {
            color: #fff;
            text-decoration: none;
            font-size: 16px;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .cart i {
            font-size: 22px;
        }

        .cart-badge {
            position: absolute;
            top: -8px;
            right: -8px;
            background-color: #ff4d4d;
            color: #fff;
            border-radius: 50%;
            padding: 2px 6px;
            font-size: 10px;
            font-weight: bold;
            border: 2px solid #1a1a1a;
            min-width: 18px;
            height: 18px;
            text-align: center;
            line-height: 1;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .cart:hover .cart-badge {
            background-color: #e63939;
        }

        .hidden {
            display: none !important;
        }

        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropdown-toggle {
            cursor: pointer;
            color: #fff;
            text-decoration: none;
            font-size: 16px;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .dropdown-menu {
            display: none;
            position: absolute;
            right: 0;
            top: 100%;
            background-color: #fff;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            min-width: 160px;
            z-index: 1;
            border-radius: 4px;
            margin-top: 5px;
        }

        .dropdown:hover .dropdown-menu {
            display: block;
        }

        .dropdown-menu a {
            color: #333;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
            font-size: 14px;
        }

        .dropdown-menu a:hover {
            background-color: #f1f1f1;
        }

        .user-avatar {
            width: 35px;
            height: 35px;
            border-radius: 50%;
            background: linear-gradient(to right, #c7d2fe, #93c5fd);
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            font-size: 14px;
            color: #1a1a1a;
        }

        .auth-links a {
            color: #fff;
            text-decoration: none;
            font-size: 16px;
            margin-left: 10px;
        }

        .auth-links a:hover {
            color: #00aaff;
        }

        .logo-img {
            height: 40px;
            width: auto;
        }

        @media (max-width: 768px) {
            .header .container {
                flex-direction: column;
                gap: 10px;
            }

            .nav-menu ul {
                flex-direction: column;
                align-items: center;
            }

            .user-actions {
                flex-direction: column;
                gap: 10px;
            }
        }
    </style>
</head>

<body>
    <header class="header">
        <div class="container">
            <div class="logo">
                <a href="/"><img src="../img/logo.png" alt="Electro Logo" class="logo-img"></a>
            </div>
            <nav class="nav-menu">
                <ul>
                    <li><a href="/">HOME</a></li>
                    <li><a href="/shop">PRODUCTS</a></li>
                    <li><a href="#">ABOUT US</a></li>
                    <li><a href="#">CONTACT US</a></li>
                </ul>
            </nav>
            <div class="user-actions">
                <% if(locals.user) { %>
                    <div class="user-avatar">
                        <%= locals.user.firstName.charAt(0).toUpperCase() %>
                        <%= locals.user.lastName.charAt(0).toUpperCase() %>
                    </div>
                    <div class="dropdown">
                        <a href="#" class="dropdown-toggle">
                            <span class="user-name">
                                <%= locals.user.firstName.toUpperCase() %>
                                <%= locals.user.lastName.toUpperCase() %>
                            </span>
                            <i class="fas fa-chevron-down"></i>
                        </a>
                        <div class="dropdown-menu">
                            <a href="/userProfile">Profile</a>
                            <a href="/orders">Orders</a>
                            <a href="/wishlist">Wishlist</a>
                            <a href="/logout">Logout</a>
                        </div>
                    </div>
                    <div class="cart">
                        <a href="/cart" class="cart-icon">
                            <i class="fas fa-shopping-cart"></i>
                            <span id="cart-count-badge" class="cart-badge hidden">0</span>
                        </a>
                    </div>
                <% } else { %>
                    <div class="auth-links">
                        <a href="/login">LOGIN</a>
                        <a href="/signup">SIGN UP</a>
                    </div>
                <% } %>
            </div>
        </div>

        <script>
            document.addEventListener('DOMContentLoaded', async () => {
                console.log('DOM loaded, fetching cart count...');
                
                // Initial cart fetch
                await fetchCartCount();

                // Listen for cart update events
                document.addEventListener('cartUpdated', async () => {
                    console.log('Cart update event received');
                    await fetchCartCount();
                });

                async function fetchCartCount() {
                    try {
                        console.log('Fetching cart data...');
                        const response = await fetch('/cart');
                        
                        if (!response.ok) {
                            throw new Error(`HTTP error! status: ${response.status}`);
                        }
                        
                        const result = await response.json();
                        console.log('Cart API response:', result);
                        
                        let cartCount = 0;
                        
                        if (result.success && result.cart && result.cart.items) {
                            cartCount = result.cart.items.reduce((sum, item) => {
                                return sum + (parseInt(item.quantity) || 0);
                            }, 0);
                        } else if (result.items) {
                            // Alternative response structure
                            cartCount = result.items.reduce((sum, item) => {
                                return sum + (parseInt(item.quantity) || 0);
                            }, 0);
                        }
                        
                        console.log('Calculated cart count:', cartCount);
                        updateCartCount(cartCount);
                        
                    } catch (error) {
                        console.error('Error loading cart count:', error);
                        updateCartCount(0);
                    }
                }

                function updateCartCount(count) {
                    const cartBadge = document.getElementById('cart-count-badge');
                    console.log('Updating cart badge:', count, 'Badge element:', cartBadge);
                    
                    if (cartBadge) {
                        if (count > 0) {
                            cartBadge.textContent = count > 99 ? '99+' : count.toString();
                            cartBadge.classList.remove('hidden');
                            console.log('Cart badge updated with count:', count);
                        } else {
                            cartBadge.classList.add('hidden');
                            cartBadge.textContent = '0';
                            console.log('Cart badge hidden');
                        }
                    } else {
                        console.error('Cart badge element not found!');
                    }
                }
            });

            // Function to trigger cart update
            function triggerCartUpdate() {
                console.log('Dispatching cart update event');
                document.dispatchEvent(new Event('cartUpdated'));
            }
        </script>
    </header>