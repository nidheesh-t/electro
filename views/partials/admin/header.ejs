<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Admin Dashboard - E-commerce</title>
    <!-- Import Google Icon Font + Materialize CSS -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <style>
        body {
            background: #f5f5f5;
        }

        nav {
            background-color: #3949ab;
        }

        .sidenav {
            width: 250px;
        }

        .dashboard-cards .card {
            padding: 20px;
        }

        .table-section {
            margin-top: 30px;
        }

        .profile-icon .material-icons {
            font-size: 48px;
            border-radius: 50%;
            background-color: #f0f0f0;
            padding: 4px;
            color: #555;
        }

        .logout-item {
            margin-top: 20px;
            border-top: 1px solid #ccc;
            padding-top: 10px;
        }

        .logout-item .menu-link {
            color: #e74c3c;
            /* Red color */
            font-weight: bold;
        }

        .logout-item .menu-link:hover {
            background-color: #f9e6e6;
        }
        
    </style>
    
</head>

<body>

    <!-- Navbar -->
    <nav>
        <div class="nav-wrapper">
            <a href="#!" class="brand-logo center">Admin Dashboard</a>
            <a href="#" data-target="slide-out" class="sidenav-trigger left"><i class="material-icons">menu</i></a>
        </div>
    </nav>

    <!-- Sidebar -->
    <ul id="slide-out" class="sidenav sidenav-fixed">
        <li>
            <div class="user-view">
                <div class="background blue darken-3"></div>
                <a href="#user" class="profile-icon"><i class="material-icons">account_circle</i></a>
                <a href="#name"><span class="white-text name">Admin Name</span></a>
                <a href="#email"><span class="white-text email">admin@example.com</span></a>
            </div>
        </li>
        <li class="menu-item">
            <a class="menu-link" href="/admin">
                <i class="material-icons">dashboard</i>
                <span class="text">Dashboard</span>
            </a>
        </li>
        <li class="menu-item">
            <a class="menu-link" href="/admin/users">
                <i class="material-icons">group</i>
                <span class="text">Customers</span>
            </a>
        </li>
        <li class="menu-item">
            <a class="menu-link" href="/admin/orders">
                <i class="material-icons">shopping_cart</i>
                <span class="text">Orders</span>
            </a>
        </li>
        <li class="menu-item">
            <a class="menu-link" href="/admin/category">
                <i class="material-icons">category</i>
                <span class="text">Category</span>
            </a>
        </li>
        <li class="menu-item">
            <a class="menu-link" href="/admin/brands">
                <i class="material-icons">grade</i>
                <span class="text">Brands</span>
            </a>
        </li>
        <li class="menu-item">
            <a class="menu-link" href="/admin/addProducts">
                <i class="material-icons">add_circle</i>
                <span class="text">Add product</span>
            </a>
        </li>
        <li class="menu-item">
            <a class="menu-link" href="/admin/products">
                <i class="material-icons">inventory_2</i>
                <span class="text">Products</span>
            </a>
        </li>
        <li class="menu-item">
            <a class="menu-link" href="/admin/coupon">
                <i class="material-icons">confirmation_number</i>
                <span class="text">Coupon</span>
            </a>
        </li>
        <li class="menu-item">
            <a class="menu-link" href="/admin/banner">
                <i class="material-icons">image</i>
                <span class="text">Banner</span>
            </a>
        </li>
        <li class="menu-item logout-item">
            <a class="menu-link" href="/admin/logout">
                <i class="material-icons">logout</i>
                <span class="text">Logout</span>
            </a>
        </li>



    </ul>