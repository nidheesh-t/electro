            color: #2874f0;
        }

        .dropdown:hover .dropdown-content {
            display: block;
            animation: fadeIn 0.2s ease-in-out;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-5px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Shop Page Styles */
        :root {
            --primary-color: #1e918b;
            --primary-hover: #15736e;
            --secondary-color: #46698f;
            --secondary-hover: #3a5a7a;
            --light-gray: #f8f9fa;
            --medium-gray: #e9ecef;
            --dark-gray: #495057;
            --text-color: #212529;
            --error-color: #dc3545;
            --shadow-sm: 0 2px 4px rgba(0, 0, 0, 0.08);
            --shadow-md: 0 4px 12px rgba(0, 0, 0, 0.1);
            --transition: all 0.3s ease;
            --border-radius: 10px;
            --font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            --base-font-size: 1.5rem;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            font-family: var(--font-family);
            font-size: var(--base-font-size);
        }

        .main-container {
            max-width: 1280px;
            margin: 3rem auto;
            padding: 0 2rem;
        }

        .shop-page {
            margin-top: 2.5rem;
        }

        /* Top Bar */
        .shop-topbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 2rem;
            margin-bottom: 3rem;
            flex-wrap: wrap;
        }

        .search-form {
            flex: 1;
            max-width: 500px;
            display: flex;
            align-items: center;
            background-color: white;
            border-radius: var(--border-radius);
            border: 1px solid var(--medium-gray);
            box-shadow: var(--shadow-sm);
            transition: var(--transition);
        }

        .search-form:focus-within {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 4px rgba(30, 145, 139, 0.15);
        }

        .search-input {
            flex: 1;
            padding: 1.25rem 1.75rem;
            font-size: 1.6rem;
            border: none;
            outline: none;
            background: transparent;
            color: var(--text-color);
        }

        .search-button {
            padding: 1.25rem 2rem;
            background-color: var(--primary-color);
            color: white;
            border: none;
            border-radius: 0 var(--border-radius) var(--border-radius) 0;
            cursor: pointer;
            font-size: 1.5rem;
            font-weight: 500;
            transition: var(--transition);
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .search-button:hover {
            background-color: var(--primary-hover);
        }

        .search-button i {
            font-size: 1.6rem;
        }

        .sort-controls {
            display: flex;
            align-items: center;
            background: white;
            padding: 0.75rem;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow-sm);
            border: 1px solid var(--medium-gray);
        }

        .sort-controls label {
            font-weight: 500;
            color: var(--text-color);
            padding: 0 1rem;
            font-size: 1.5rem;
        }

        .sort-controls select {
            padding: 0.75rem;
            border: none;
            border-radius: 4px;
            background: white;
            min-width: 200px;
            cursor: pointer;
            font-size: 1.5rem;
            outline: none;
            transition: var(--transition);
        }

        .sort-controls select:focus {
            box-shadow: 0 0 0 3px rgba(30, 145, 139, 0.15);
        }

        /* Filter Tags */
        .filter-tags {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            margin-bottom: 2rem;
        }

        .filter-tag {
            background-color: var(--light-gray);
            padding: 0.75rem 1.25rem;
            border-radius: 24px;
            font-size: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            color: var(--text-color);
        }

        .filter-tag a {
            color: var(--primary-color);
            text-decoration: none;
            font-weight: bold;
            background: rgba(30, 145, 139, 0.1);
            width: 26px;
            height: 26px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            transition: var(--transition);
            font-size: 1.5rem;
        }

        .filter-tag a:hover {
            background: rgba(30, 145, 139, 0.2);
        }

        .clear-filters {
            background-color: transparent;
            color: var(--primary-color);
            padding: 1rem 1.5rem;
            border: 1px solid var(--primary-color);
            border-radius: var(--border-radius);
            cursor: pointer;
            font-weight: 500;
            font-size: 1.5rem;
            transition: var(--transition);
        }

        .clear-filters:hover {
            background-color: var(--primary-color);
            color: white;
        }

        /* Product List Container */
        .product-list-container {
            display: flex;
            gap: 2.5rem;
            margin-bottom: 3.5rem;
        }

        .sidebar {
            width: 300px;
            padding: 2rem;
            background: white;
            border-radius: var(--border-radius);
            border: 1px solid var(--medium-gray);
            box-shadow: var(--shadow-sm);
            position: sticky;
            top: 2rem;
            align-self: flex-start;
        }

        .filter-section {
            margin-bottom: 2.5rem;
        }

        .filter-title {
            font-size: 1.8rem;
            font-weight: 600;
            color: var(--text-color);
            margin-bottom: 1.25rem;
            padding-bottom: 0.75rem;
            border-bottom: 2px solid var(--primary-color);
        }

        .filter-section ul {
            list-style: none;
        }

        .filter-item {
            padding: 0.75rem 0;
            transition: var(--transition);
        }

        .filter-item a {
            display: block;
            padding: 0.75rem 1rem;
            color: var(--text-color);
            text-decoration: none;
            font-size: 1.5rem;
            border-radius: 4px;
            transition: var(--transition);
        }

        .filter-item a:hover {
            color: var(--primary-color);
            background-color: var(--light-gray);
            padding-left: 1.25rem;
        }

        .filter-item a.active {
            color: var(--primary-color);
            font-weight: 600;
            background-color: rgba(30, 145, 139, 0.1);
            padding-left: 1.25rem;
        }

        .price-filter {
            padding: 1.25rem 0;
        }

        .price-range-inputs {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 1.25rem;
        }

        .price-range-inputs input {
            flex: 1;
            padding: 0.75rem;
            border: 1px solid var(--medium-gray);
            border-radius: 4px;
            font-size: 1.5rem;
            max-width: 120px;
            transition: var(--transition);
        }

        .price-range-inputs input:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(30, 145, 139, 0.15);
        }

        .price-range-inputs span {
            font-size: 1.5rem;
        }

        .apply-button {
            background-color: var(--primary-color);
            color: white;
            padding: 1rem;
            border: none;
            border-radius: var(--border-radius);
            cursor: pointer;
            width: 100%;
            font-weight: 500;
            font-size: 1.5rem;
            transition: var(--transition);
        }

        .apply-button:hover {
            background-color: var(--primary-hover);
        }

        /* Product Grid */
        .product-grid {
            flex: 1;
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 2rem;
        }

        .product-card {
            background: white;
            border: 1px solid var(--medium-gray);
            border-radius: var(--border-radius);
            padding: 1.5rem;
            text-align: center;
            transition: var(--transition);
            box-shadow: var(--shadow-sm);
            display: flex;
            flex-direction: column;
            height: 450px;
            position: relative;
            overflow: hidden;
        }

        .product-card:hover {
            transform: translateY(-4px);
            box-shadow: var(--shadow-md);
        }

        .product-card img {
            width: 100%;
            height: 200px;
            object-fit: contain;
            border-radius: 6px;
            margin-bottom: 1rem;
            background: var(--light-gray);
            padding: 0.75rem;
        }

        .product-card h4 {
            font-size: 1.8rem;
            font-weight: 600;
            color: var(--text-color);
            margin-bottom: 0.75rem;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            flex-grow: 1;
        }

        .product-card .brand {
            font-size: 1.5rem;
            color: var(--dark-gray);
            margin-bottom: 0.75rem;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .price {
            font-size: 1.8rem;
            font-weight: 600;
            color: var(--primary-color);
            margin-bottom: 0.75rem;
        }

        .original-price {
            font-size: 1.5rem;
            color: var(--dark-gray);
            text-decoration: line-through;
            margin-left: 0.75rem;
        }

        .wishlist-btn {
            position: absolute;
            top: 1rem;
            right: 1rem;
            background: white;
            color: #ccc;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            border: none;
            box-shadow: var(--shadow-sm);
            transition: var(--transition);
            font-size: 1.8rem;
        }

        .wishlist-btn:hover {
            color: #ff6b6b;
            transform: scale(1.1);
        }

        .wishlist-btn.active {
            color: #ff6b6b;
        }

        .add-to-cart-btn {
            background-color: var(--secondary-color);
            color: white;
            padding: 1rem;
            border: none;
            border-radius: var(--border-radius);
            cursor: pointer;
            width: 100%;
            font-weight: 500;
            font-size: 1.5rem;
            transition: var(--transition);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.75rem;
        }

        .add-to-cart-btn:hover {
            background-color: var(--secondary-hover);
        }

        .add-to-cart-btn i {
            font-size: 1.6rem;
        }

        /* Pagination */
        .pagination {
            display: flex;
            justify-content: center;
            gap: 1rem;
            margin: 3.5rem 0;
        }

        .pagination a {
            padding: 1rem 1.5rem;
            background: white;
            border: 1px solid var(--medium-gray);
            color: var(--text-color);
            text-decoration: none;
            border-radius: var(--border-radius);
            font-size: 1.5rem;
            font-weight: 500;
            transition: var(--transition);
        }

        .pagination a:hover {
            background-color: var(--light-gray);
        }

        .pagination .active {
            background-color: var(--primary-color);
            color: white;
            border-color: var(--primary-color);
        }

        /* No Products */
        .no-products {
            grid-column: 1 / -1;
            text-align: center;
            padding: 3.5rem;
            background: white;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow-sm);
        }

        .no-products h3 {
            color: var(--text-color);
            font-size: 2rem;
            margin-bottom: 1.25rem;
        }

        .no-products p {
            color: var(--dark-gray);
            font-size: 1.5rem;
            margin-bottom: 2rem;
        }

        .no-products button.price-button {
            background-color: transparent;
            color: var(--primary-color);
            border: 1px solid var(--primary-color);
            padding: 1rem 2rem;
            border-radius: var(--border-radius);
            cursor: pointer;
            font-weight: 500;
            font-size: 1.5rem;
            transition: var(--transition);
        }

        .no-products button.price-button:hover {
            background-color: var(--primary-color);
            color: white;
        }

        /* Search Feedback */
        .search-feedback {
            grid-column: 1 / -1;
            padding: 1.25rem 0;
            font-size: 1.5rem;
            color: var(--text-color);
            font-weight: 500;
        }

        /* Responsive Design */
        @media (max-width: 992px) {
            .product-list-container {
                flex-direction: column;
            }

            .sidebar {
                width: 100%;
                position: static;
            }

            .product-grid {
                grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
            }
        }

        @media (max-width: 576px) {
            .shop-topbar {
                flex-direction: column;
                align-items: stretch;
            }

            .search-form {
                max-width: 100%;
            }

            .price-range-inputs {
                flex-direction: column;
                align-items: stretch;
            }

            .price-range-inputs input {
                max-width: 100%;
            }

            :root {
                --base-font-size: 1.3rem;
            }

            .product-card {
                height: 420px;
            }

            .product-card img {
                height: 180px;
            }
        }
    </style>

</head>

