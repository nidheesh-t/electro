                            <div class="tab-pane" id="wallet">
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="mb-0"><i class="fas fa-wallet mr-2"></i>Wallet Balance</h5>
                                    </div>
                                    <div class="card-body text-center py-5">
                                        <div class="wallet-balance">
                                            $<%= user.wallet ? user.wallet.toFixed(2) : '0.00' %>
                                        </div>
                                        <p class="text-muted mb-4">Your current wallet balance</p>
                                        
                                        <div class="row justify-content-center">
                                            <div class="col-md-6">
                                                <button class="btn btn-primary-dark btn-lg w-100 mb-3">
                                                    <i class="fas fa-plus mr-2"></i>Add Money
