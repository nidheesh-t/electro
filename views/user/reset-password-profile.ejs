<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Reset Password - ElectroShop</title>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <style>
    :root {
      --primary-blue: #2563eb;
      --electric-blue: #3b82f6;
      --dark-text: #1e293b;
      --light-gray: #f1f5f9;
      --medium-gray: #e2e8f0;
      --error-red: #ef4444;
      --success-green: #10b981;
      --white: #ffffff;
      --border-radius: 12px;
      --box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      --transition: all 0.3s ease;
    }

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('https://images.unsplash.com/photo-1600585154340-be6161a56a0c?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80') no-repeat center center fixed;
            background-size: cover;
        }

    .container {
      max-width: 480px;
      width: 100%;
      padding: 2rem;
      background: var(--white);
      border-radius: var(--border-radius);
      box-shadow: var(--box-shadow);
      text-align: center;
    }

    .logo {
      font-size: 1.75rem;
      font-weight: 700;
      color: var(--primary-blue);
      margin-bottom: 1rem;
    }

    h2 {
      font-size: 1.75rem;
      font-weight: 800;
      margin-bottom: 1rem;
      color: var(--primary-blue);
    }

    .form-group {
      margin-bottom: 1.5rem;
      text-align: left;
    }

    label {
      font-size: 1rem;
      font-weight: 500;
      color: var(--dark-text);
      margin-bottom: 0.5rem;
      display: block;
    }

    input {
      width: 100%;
      padding: 0.8rem;
      border: 2px solid var(--medium-gray);
      border-radius: var(--border-radius);
      font-size: 1rem;
      background: var(--light-gray);
      color: var(--dark-text);
      transition: var(--transition);
    }

    input:focus {
      border-color: var(--electric-blue);
      outline: none;
      box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2);
    }

    .password-container {
      position: relative;
    }

    .toggle-password {
      position: absolute;
      right: 1rem;
      top: 50%;
      transform: translateY(-50%);
      cursor: pointer;
      color: var(--primary-blue);
      font-size: 0.9rem;
      font-weight: 600;
    }

    .toggle-password:hover {
      color: var(--electric-blue);
    }

    .error-message {
      color: var(--error-red);
      font-size: 0.8rem;
      margin-top: 0.25rem;
      display: none;
    }

    button {
      width: 100%;
      padding: 0.9rem;
      background: var(--primary-blue);
      color: var(--white);
      border: none;
      border-radius: var(--border-radius);
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      transition: var(--transition);
    }

    button:hover {
      background: var(--electric-blue);
      transform: translateY(-2px);
    }

    .login-link {
      font-size: 0.9rem;
      margin-top: 1rem;
    }

    .login-link a {
      color: var(--primary-blue);
      text-decoration: none;
      font-weight: 600;
    }

    .login-link a:hover {
      text-decoration: underline;
    }

    .email-display {
      background: var(--light-gray);
      padding: 0.75rem;
      border-radius: var(--border-radius);
      margin-bottom: 1.5rem;
      font-size: 0.95rem;
      color: var(--dark-text);
      border: 1px solid var(--medium-gray);
    }

    .email-display span {
      font-weight: 600;
      color: var(--primary-blue);
    }
  </style>
</head>

<body>
  <div class="container">
    <h2>Change Your Password</h2>
    <div class="email-display">
      Changing password for: <span id="userEmail">
        <%= email %>
      </span>
    </div>
    <% if (message) { %>
      <div class="error-message" style="display: block;">
        <%= message %>
      </div>
    <% } %>
    <form id="resetForm" action="/reset-password-profile" method="POST">
      <br>
      <div class="form-group">
        <label for="newPass1">New Password</label>
        <div class="password-container">
          <input type="password" id="newPass1" name="newPass1" placeholder="Enter new password" required>
          <span class="toggle-password">Show</span>
        </div>
      </div>
      <div class="form-group">
        <label for="newPass2">Confirm Password</label>
        <div class="password-container">
          <input type="password" id="newPass2" name="newPass2" placeholder="Confirm new password" required>
          <span class="toggle-password">Show</span>
        </div>
      </div>
      <button type="submit" id="submitBtn">Change Password</button>
    </form>
    <div class="login-link">
      <a href="/userProfile">Back to Profile</a>
    </div>
  </div>

  <script>
    $(document).ready(function () {
      // Toggle password visibility
      $('.toggle-password').click(function () {
        const $parent = $(this).parent();
        const $input = $parent.find('input');
        const type = $input.attr('type') === 'password' ? 'text' : 'password';
        $input.attr('type', type);
        $(this).text(type === 'password' ? 'Show' : 'Hide');
      });

      // Form submission
      $('#resetForm').submit(function (e) {
        e.preventDefault();
        const $button = $('#submitBtn');

        // Basic validation
        const newPass1 = $('#newPass1').val();
        const newPass2 = $('#newPass2').val();

        if (newPass1.length < 8) {
          Swal.fire({
            icon: 'error',
            title: 'Invalid Password',
            text: 'Password must be at least 8 characters long',
            confirmButtonColor: 'var(--primary-blue)'
          });
          return;
        }

        if (newPass1 !== newPass2) {
          Swal.fire({
            icon: 'error',
            title: 'Passwords Mismatch',
            text: 'Please make sure both passwords match',
            confirmButtonColor: 'var(--primary-blue)'
          });
          return;
        }

        // Show loading state
        $button.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Processing...');

        // Submit form
        this.submit();
      });
    });
  </script>
</body>

</html>