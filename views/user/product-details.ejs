    </div>

    <section class="product-specs">
      <h2>Product Highlights</h2>
      <ul>
        <li><span>Description:</span><span>
            <%= product.description %>
          </span></li>
        <% if (specs.length> 0) { %>
          <% const uniqueSpecs=[...new Map(specs.map(spec=> [spec.name.toLowerCase(), spec])).values()]; %>
            <% uniqueSpecs.forEach(spec=> { %>
              <li><span>
                  <%= spec.name %>:
                </span><span>
                  <%= spec.value %>
                </span></li>
              <% }) %>
                <% } %>
      </ul>
