<%- include("../../views/partials/admin/header") %>

<main class="container" style="margin-left: 270px; padding-top: 30px;">
  <div class="row">
    <div class="col s12 m6 offset-m3">
      <div class="card">
        <div class="card-content">
          <span class="card-title">Edit Brand</span>
          <form method="POST" action="/admin/editBrand" enctype="multipart/form-data">
            <input type="hidden" name="id" value="<%= brand._id %>">
            <div class="input-field">
              <input id="brand_name" name="brandName" type="text" value="<%= brand.brandName %>" required>
              <label for="brand_name" class="active">Brand Name</label>
            </div>

            <div class="file-field input-field">
              <div class="btn blue darken-2">
                <span>Upload New Logo</span>
                <input type="file" name="image">
              </div>
              <div class="file-path-wrapper">
                <input class="file-path validate" type="text" placeholder="Upload new brand image (optional)">
              </div>
            </div>

            <div class="center-align">
              <button type="submit" class="btn blue darken-2">Update Brand</button>
              <a href="/admin/brands" class="btn grey">Cancel</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include("../../views/partials/admin/footer") %>


